    <!--android:maxWidth="80dp"-->
    <!--android:src="@drawable/joyball"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentStart="true" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/logger"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gyroToggle"
        android:textOn="@string/switch_on"
        android:textOff="@string/switch_off"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/slider"
        android:layout_toLeftOf="@+id/logger"
        android:layout_toStartOf="@+id/logger"
        android:layout_marginRight="119dp"
        android:layout_marginEnd="119dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView1"
        android:layout_above="@+id/gyroToggle"
        android:layout_toLeftOf="@+id/gyroToggle"
        android:layout_toStartOf="@+id/gyroToggle"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

</RelativeLayout>
